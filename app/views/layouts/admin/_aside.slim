aside.navbar.navbar-vertical.navbar-expand-lg.navbar-dark
  .container-fluid
    button.navbar-toggler data-bs-target='#navbar-menu' data-bs-toggle='collapse' type='button'
      span.navbar-toggler-icon
    h1.navbar-brand.navbar-brand-autodark
      = link_to admin_root_path
        = image_pack_tag 'tabler-light.svg', width: '110', height: '32', alt: 'Tabler', class: 'navbar-brand-image'
    .navbar-nav.flex-row.d-lg-none
    #navbar-menu.collapse.navbar-collapse
      ul.navbar-nav.pt-lg-3
        li.nav-item class=active_link_class(['admin/dashboard#index'])
          = link_to admin_root_path, class: 'nav-link'
            span.nav-link-icon.d-md-none.d-lg-inline-block.material-icons.material-icons-outlined dashboard
            span.nav-link-title
              | Dashboard
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle aria-expanded='false' data-bs-toggle='dropdown' href='#navbar-base' role='button'
            span.nav-link-icon.d-md-none.d-lg-inline-block.material-icons.material-icons-outlined face
            span.nav-link-title
              | Account
          .dropdown-menu
            .dropdown-menu-columns
              .dropdown-menu-column
                = link_to 'Profile', edit_user_registration_path, class: 'dropdown-item'
                = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item'
